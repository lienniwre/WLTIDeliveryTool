@model WLTIDeliveryTool.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_sbadminlogin.cshtml";
}

<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block" style="background-image:url(../Content/images/login.jpg);object-fit:cover;background-repeat:no-repeat;background-position:center center;"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                </div>
                                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = Request["ReturnUrl"] }, FormMethod.Post))
                                {
                                    <div class="form-group">
                                        @*<input type="email" class="form-control form-control-user"
                id="exampleInputEmail" aria-describedby="emailHelp"
                placeholder="Enter Email Address...">*@
                                        @Html.TextBoxFor(m => m.Username, null, new { @class = "form-control form-control-user", @placeholder = "Username" })
                                        @Html.ValidationMessageFor(m => m.Username, null, new { @style = "color:red;" })<br />
                                    </div>
                                    <div class="form-group">
                                        @*<input type="password" class="form-control form-control-user"
        id="exampleInputPassword" placeholder="Password">*@
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-user",@placeholder="Password" })
                                        @Html.ValidationMessageFor(m => m.Password, null, new { @style = "color:red;" })<br />
                                        @Html.ValidationMessage("Result", new { @style = "color:red" })
                                    </div>
                                   
                                    <button href="/home/index" class="btn btn-primary btn-user btn-block">
                                        Login
                                    </button>
                                   
                                }
                                
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>



